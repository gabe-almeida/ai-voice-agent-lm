# Voice Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/voice_agent
REDIS_URL=redis://localhost:6379

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=AIzaSyAf1GLHp85IBopffY4mrJ0oCWwdg3NXJhU
GOOGLE_GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI Configuration (for Realtime API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17

# API Configuration
API_KEY_SECRET=your_secret_for_generating_api_keys
JWT_SECRET=your_jwt_secret

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_BUFFER_SIZE=10000

# Call Configuration
MAX_CALL_DURATION=7200
MAX_CONCURRENT_CALLS=100
CALL_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Storage Configuration
RECORDINGS_BUCKET=voice-agent-recordings
KNOWLEDGE_BASE_BUCKET=voice-agent-knowledge

# Worker Configuration
WORKER_CONCURRENCY=10
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_CALL_RECORDING=true
ENABLE_TRANSCRIPTION=true
ENABLE_ANALYTICS=true