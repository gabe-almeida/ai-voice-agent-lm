# Production Environment Variables for Render.com
# Copy this file to .env.production and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000  # Render provides this automatically

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-xxxxx

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890
# Comma-separated list of phone numbers for pool
TWILIO_PHONE_NUMBERS=+1234567890,+1234567891,+1234567892

# CRM Configuration
CRM_API_BASE_URL=https://your-crm-api.com
CRM_API_KEY=your-crm-api-key

# Google Gemini Configuration (optional, for fallback)
GOOGLE_GEMINI_API_KEY=AIzaxxxxx

# Security Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100